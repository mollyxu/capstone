<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".StartSessionLogisticsFragment">

    <EditText
        android:id="@+id/et_start_session_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Name of study session"
        />

    <EditText
        android:id="@+id/et_start_session_num_participants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Number of participants"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_start_session_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Start time"
        android:inputType="datetime"/>

    <EditText
        android:id="@+id/et_start_session_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="End time"
        android:inputType="datetime"/>

    <Button
        android:id="@+id/btn_start_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Next"
        android:textColor="@color/white"/>
</LinearLayout>